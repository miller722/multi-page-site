						include ../components/btn-normal.pug
				section.section-agencies.section--padding  
					.container 
						.section-heading--center
							include ../components/heading.pug
							include ../components/description.pug
						.pb-sm
						.card-profile__wrapper
							include ../components/card-profile.pug
							include ../components/card-profile.pug
							include ../components/card-profile.pug
							include ../components/card-profile.pug
				section.section-comment.section--padding  
					.container 
							.swiper.home-swiper.JS-home-swiper
								.swiper-wrapper
									.swiper-slide.home-swiper-slide
										include ../components/comment.pug
									.swiper-slide.home-swiper-slide
									.swiper-slide.home-swiper-slide
										include ../components/comment.pug
								.pag
									.swiper-pagination 
								.swiper-button-prev
								.swiper-button-next
