					.container
						.section-heading--center
							include ../components/heading.pug
						.card-wrapper
							include ../components/card.pug
							include ../components/card.pug
							include ../components/card.pug
				section.section-aboutUs.section--padding  
					.container
						.flex-wrapper 
							.col-6 
								include ../components/heading.pug
								include ../components/description.pug
								.btn--max
									include ../components/btn-normal.pug
							.offset-1.col-5
								include ../components/video.pug
				section.section-contact 
					.container
						include ../components/contact-us.pug
