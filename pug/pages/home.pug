		body 
			//- header
			include ../components/header.pug
			//- main
			main 
				section.section-home.section--padding 
					.container 
							.swiper.home-swiper.JS-home-swiper
								.swiper-wrapper
									.swiper-slide.home-swiper-slide
										.d-flex 
											.col-6
												include ../components/slide-card.pug
