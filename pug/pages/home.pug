													include ../components/btn-normal.pug
											.offset-2.col-4
												include ../components/card.pug
									.swiper-slide.home-swiper-slide
										.d-flex 
											.col-6
												include ../components/slide-card.pug
												.btn--max 
													include ../components/btn-normal.pug
											.offset-2.col-4
												include ../components/card.pug
								.pag
									.swiper-pagination 
								.swiper-button-prev
								.swiper-button-next
				section.section-property.section--padding 
					.container 
						.section-heading--center
							include ../components/heading.pug
							include ../components/description.pug
						.pb-sm
						.d-flex 
							include ../components/map.pug
							include ../components/form.pug
				section.section-card.section--padding  
					.container
						.section-heading--center
							include ../components/heading.pug
						.btn-special.d-flex.justify-content-center
							a.btn.btn-primary--border-green(href="") RENT
							a.btn.btn-primary--border-green(href="") BUY
						.card-wrapper
							include ../components/card.pug 
							include ../components/card.pug
							include ../components/card.pug
							include ../components/card.pug
							include ../components/card.pug
							include ../components/card.pug
